            <!--<mvc:mapping path="/**"/>-->
            <!--<bean class="com.hotnews.ssm.web.HanderInterceptorTest"></bean>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->

</beans>